<Window x:Class="ImageeClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageeClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="DeepSkyBlue">
    <Canvas>
        <Button FontSize="25" FontWeight="UltraBlack" Background="Aquamarine" Click="ChooseImage_Click_1" Name="ChooseImage" Content="Choose Image"  Height="63" Width="178" Canvas.Left="2" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Center" ></Button>
        <Image Name="Imagee" Stretch="Uniform"  Height="285" Width="681" Canvas.Top="112" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="185" />
        <Button x:Name="SendToClick" Click="SendToClick_Click" Content="Send Image" FontSize="25" FontWeight="UltraBlack" Background="Aquamarine" Height="63" Width="178" Canvas.Left="2" Canvas.Top="176" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Label  Content="Not connection yet" Name="serverInfoLbl" FontSize="20" Background="Aquamarine" Canvas.Left="47" Canvas.Top="48" FontWeight="UltraBlack"  Height="45" Width="1018" HorizontalAlignment="Left" VerticalAlignment="Center"></Label>

    </Canvas>
</Window>
